<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fixtureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:id="@+id/fixtBackButton"
                android:layout_height="match_parent"
                android:background="@drawable/back_button"
                android:fontFamily="@font/mulish_extra_bold"
                android:text="back"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="2dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/allFixt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="All fixtures"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/teamFixt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Team Fixtures"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fixturesLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fixtRecyclerView"
                android:layout_marginTop="12dp"
                app:reverseLayout="true">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>