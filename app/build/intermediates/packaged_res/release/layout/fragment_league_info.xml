<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".league_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DDDDDD">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="70dp"
            android:id="@+id/leagueInfBackButton"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/back_button"
            android:fontFamily="@font/mulish_extra_bold"
            android:text="back"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_extra_bold"
            android:text="LEAGUE INFO"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginVertical="10dp" />


    </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leagueRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="461dp"
            android:layout_marginVertical="12dp">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="4dp"
                android:elevation="5dp"
                android:backgroundTint="@color/green">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Promotion into League 2"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:padding="5dp"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="4dp"
                android:elevation="5dp"
                android:backgroundTint="@color/orange"
                android:textAlignment="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="League 2 Play-Offs "
                android:textAlignment="center"
                android:textSize="15dp"
                android:fontFamily="@font/mulish_extra_bold"
                android:padding="5dp"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="4dp"
                android:elevation="5dp"
                android:backgroundTint="@color/red"

                android:textAlignment="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relegation into National League North/South "
                    android:textAlignment="center"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:textSize="15dp"
                    android:padding="5dp"/>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

</LinearLayout>
</RelativeLayout>