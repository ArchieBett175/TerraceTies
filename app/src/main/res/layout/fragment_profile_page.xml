<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilePage">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DDDDDD">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="70dp"
        android:id="@+id/profileBackButton"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@drawable/back_button"
        android:fontFamily="@font/mulish_extra_bold"
        android:text="back"
        android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_extra_bold"
            android:text="PROFILE PAGE"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingBut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/settings_button" />

    </LinearLayout>

    <TextView
        android:id="@+id/currentTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURRENT TEAM \n BARNET"
        android:textAlignment="center"
        android:textSize="30dp"
        android:fontFamily="@font/mulish_extra_bold"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/teamPicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="30dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:foreground="@drawable/profile_pic_border"
        android:elevation="15dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/userNameLay"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@color/style_grey"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="NAME: "
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/userNameBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="USERNAME"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groundsVisited"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@color/style_grey"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="GROUNDS VISITED: "
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/groundVisBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="0"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dateJoined"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@color/style_grey"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="DATE JOINED"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/dateJoinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="00/00/0000"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/commonGround"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@color/style_grey"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="COMMON GROUND"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/commonGroundBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="The Hive"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gamesBeenTo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@color/style_grey"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="80dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="GAMES ATTENDED"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/gamesBeenToBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_extra_bold"
                    android:text="0"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

</RelativeLayout>