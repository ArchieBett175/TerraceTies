<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fixtureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:id="@+id/resBackButton"
                android:layout_height="match_parent"
                android:background="@drawable/back_button"
                android:fontFamily="@font/mulish_extra_bold"
                android:text="back"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="2dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/allResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Results"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="5dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/teamResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Results"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="5dp"/>
            </LinearLayout>

        </LinearLayout>


            <LinearLayout
                android:id="@+id/ResultsLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/resRecyclerView"
                        android:layout_marginTop="12dp"
                        app:reverseLayout="true">

                    </androidx.recyclerview.widget.RecyclerView>





            </LinearLayout>
    </LinearLayout>

</RelativeLayout>